<?xml version="1.0" encoding="utf-8"?>
<Project>
  <ItemGroup>
    <BoleroScopedCss Include="**/*.bolero.css">
      <!-- For "Foo/Bar.bolero.css", %(Filename) is "Bar.bolero". GetFileName() gives us "Bar". -->
      <ScopeName>$([System.IO.Path]::GetFileName('%(Filename)')</ScopeName>
    </BoleroScopedCss>
  </ItemGroup>
</Project>
